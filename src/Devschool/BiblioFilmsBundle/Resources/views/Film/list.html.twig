{% extends 'DevschoolBiblioFilmsBundle::layout.html.twig' %}

{% block body %}
<div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Cinéma</p>
                <div class="list-group">
                    <a href="{{ path('page_films') }}" class="list-group-item active">Films</a>
                    <a href="{{ path('page_realisateurs') }}" class="list-group-item">Réalisateurs</a>
                </div>
            </div>

			<div class="col-md-9">
						
				<h2>Liste des films</h2>
							
					<br />


			    {% for film in films %}

					<div class="thumbnail">
			            <div class="caption-full">
				        	<h4 class="pull-right">{{ film.genres }}</h4>
				        	<h4><a href="{{ path('page_film', {'id': film.id}) }}">{{ film.titre }}</a></h4>
				            <p>{{ film.synopsis }}</p>
				        </div>
			            <div class="ratings">
			                <p class="pull-right">sorti le {{ film.dateSortie|date('d/m/Y') }}</p>
			                <p> Réalisé par : <a href="{{ path('page_realisateur', {'id': film.realisateur.id}) }}">{{ film.realisateur }}</a> </p>
			            </div>
			        </div>

			    {% endfor %}

			</div>

		</div>

</div>

{% endblock %}

